<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name = "hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name = "hibernate.connection.url">jdbc:postgresql://localhost:5432/productstar_db</property>
        <property name = "hibernate.connection.username">psuser</property>
        <property name = "hibernate.connection.password">pspassword</property>
        <property name = "show_sql">false</property>
        <property name = "format_sql">false</property>
        <property name = "hibernate.hbm2ddl.auto">create</property>
        <property name = "hibernate.jdbc.batch_size">50</property>

    </session-factory>
</hibernate-configuration>